{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.venv": true,            // Hides the massive Python env
        "**/.smart-env": true,       // Hides AI plugin data
        "**/.obsidian": true,        // Hides Obsidian config
        "**/__pycache__": true,      // Hides compiled python files
        "**/*.dist-info": true
    },
    "python.defaultInterpreterPath": ".venv\\Scripts\\python.exe",
    "terminal.integrated.defaultProfile.windows": "PowerShell"
}